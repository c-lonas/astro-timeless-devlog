<div id="trello-board-container" class="w-full h-96 overflow-y-auto">
    <!-- Trello board will be displayed here -->
  </div>
  
<script type="module">
async function fetchTrelloBoard() {
    const BOARD_ID = '5FljPsFO';
    const TRELLO_API_KEY = import.meta.env.TRELLO_KEY;
    const TRELLO_TOKEN = import.meta.env.TRELLO_TOKEN;

    const url = `https://api.trello.com/1/boards/${BOARD_ID}?key=${TRELLO_API_KEY}&token=${TRELLO_TOKEN}`;
    try {
    const response = await fetch(url);
    const boardData = await response.json();

    const listsUrl = `https://api.trello.com/1/boards/${BOARD_ID}/lists?key=${TRELLO_API_KEY}&token=${TRELLO_TOKEN}`;
    const listsResponse = await fetch(listsUrl);
    const listsData = await listsResponse.json();

    for (const list of listsData) {
        const cardsUrl = `https://api.trello.com/1/lists/${list.id}/cards?fields=name,labels,url&key=${TRELLO_API_KEY}&token=${TRELLO_TOKEN}`;
        const cardsResponse = await fetch(cardsUrl);
        list.cards = await cardsResponse.json();
    }

    displayBoard(boardData, listsData);
    } catch (error) {
    console.error('Error fetching Trello board:', error);
    }
}

function displayBoard(boardData, listsData) {
  const container = document.getElementById('trello-board-container');
  if (container) {
    let html = `<h2 class="text-3xl font-bold mb-4">Trello Board</h2><div class="flex mx-2">`;

    for (const list of listsData) {
      html += `<div class="w-full md:w-1/3 px-2 mb-4">
                 <h3 class="text-xl text-blue-500 text-center mb-3">${list.name}</h3>
                 <ul class="bg-midnight-800 border border-midnight-900 rounded-xl p-2">`;
      for (const card of list.cards) {
        html += `<li class="card bg-midnight-700 hover:bg-midnight-600 border border-midnight-900 rounded-lg mb-4 p-2 relative">
             <a href="${card.url}" target="_blank">${card.name}</a>
             <div class="flex space-x-1 mt-2">`;

                    for (const label of card.labels) {
                    const colorClass = `bg-label-${label.color}`;
                    html += `<div class="label-circle ${colorClass} w-3 h-3 rounded-full relative group " style="background-color: ${label.color};">
                                <span class="label-title hidden group-hover:block absolute bg-white p-1 border border-gray-200 rounded shadow-lg z-20">
                                ${label.name}
                                </span>
                            </div>`;
                    }
        html += `</div></li>`;
      }
      html += `</ul></div>`;
    }

    html += `</div>`;
    container.innerHTML = html;
  }
}


document.addEventListener('DOMContentLoaded', fetchTrelloBoard);
</script>